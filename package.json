{
	"name": "arena-log-inspector",
	"publisher": "mtgatool",
	"displayName": "mtgatool log inspector",
	"description": "",
	"version": "0.0.2",
	"repository": {
		"type": "git",
		"url": "https://github.com/mtgatool/arena-log-inspector"
	},
	"icon": "images/icon.png",
	"engines": {
		"vscode": "^1.45.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:arena-log",
		"onCommand:arena-log-inspector.load",
		"onCommand:arena-log-inspector.unload"
	],
	"main": "./out/extension.js",
	"contributes": {
		"capabilities": {
			"hoverProvider": "true"
		},
		"languages": [
			{
				"id": "arena-log",
				"aliases": [
					"Arena log"
				],
				"filenames": [
					"Player.log",
					"Player-prev.log",
					"output.log"
				],
				"extensions": [
					".log"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "arena-log",
				"scopeName": "source.json",
				"path": "./syntaxes/JSON.tmLanguage.json"
			}
		],
		"commands": [
			{
				"command": "arena-log-inspector.load",
				"title": "Load MTG Arena Tool Inspector"
			},
			{
				"command": "arena-log-inspector.unload",
				"title": "Unload MTG Arena Tool Inspector"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js",
		"deploy": "vsce publish --yarn"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.45.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vsce": "^1.76.1",
		"vscode-test": "^1.3.0"
	}
}
